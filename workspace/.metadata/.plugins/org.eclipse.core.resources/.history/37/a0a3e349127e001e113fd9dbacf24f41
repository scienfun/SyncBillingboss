#        session[:mobile_browser] = true
#      else
#        session[:mobile_browser] = false
#      end
#    end
    render_mobile(:mobile_layout => "external_mobile")

  end
  
  def faq
    render :layout=>'external_main'
  end

  def about
    render :layout=>'external_main'
  end

  def tour
